<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Health Center Connect</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://kit.fontawesome.com/d70dca505b.js" crossorigin="anonymous"></script>
    <link href="index.css" rel="stylesheet">
    <link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap" rel="stylesheet">
    <link rel="icon" href="./img/logoHC.jpeg" type="image/x-icon">
    <style>
      #logo{
        width: 35px;
        height: 35px;
        margin-right: 12px;
      }
      iframe{
        align-self: center;
        /* background-image: url(./img/doctor-bg.jpg);
            background-repeat: no-repeat; */
            scrollbar-width: 0%;
      }

        body {
            font-family: 'Arial', sans-serif;
            display: flex;
            flex-direction: column;
            min-height: 100vh;
        }

        .navbar {
            box-shadow: 0 2px 4px rgba(0,0,0,.1);
        }

        .navbar-brand, .nav-link {
            color: #4a4a4a;
            transition: color 0.3s ease;
        }

        .navbar-brand:hover, .nav-link:hover {
            color: #2c3e50;
        }

        .bg-image {
            background-image: url('https://images.unsplash.com/photo-1532938911079-1b06ac7ceec7?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=1632&q=80');
            background-size: cover;
            background-position: center;
            height: 300px;
            position: relative;
        }

        .bg-image::before {
            content: '';
            position: absolute;
            top: 0;
            right: 0;
            bottom: 0;
            left: 0;
            background: rgba(44, 62, 80, 0.6);
        }

        .bg-image * {
            position: relative;
        }

        .card {
            border: none;
            border-radius: 15px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }

        .card:hover {
            transform: translateY(-5px);
            box-shadow: 0 6px 12px rgba(0, 0, 0, 0.15);
        }

        .card-title {
            color: #2c3e50;
            border-bottom: 2px solid #3498db;
            padding-bottom: 10px;
            margin-bottom: 15px;
        }

        .user-info {
            background-color: #e8f4f8;
        }

        .previous-visits {
            background-color: #f0f8ff;
        }

        .medical-alerts {
            background-color: #fff5e6;
        }

        .list-group-item {
            background-color: transparent;
            border: none;
            padding: 10px 0;
            border-bottom: 1px solid rgba(0,0,0,.125);
        }

        .alert {
            border-radius: 10px;
            margin-bottom: 10px;
        }

        footer {
            background-color: #f8f9fa;
            color: #6c757d;
        }

        @media (max-width: 768px) {
            .bg-image {
                height: 200px;
            }
        }

        /* Animations */
        @keyframes fadeIn {
            from { opacity: 0; }
            to { opacity: 1; }
        }

        .card, .alert {
            animation: fadeIn 0.5s ease-out;
        }

        /* Accessibility */
        a:focus, button:focus {
            outline: 3px solid #3498db;
            outline-offset: 2px;
        }

        /* Interactive elements */
         
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light sticky-top">
        <div class="container">
            <img id="logo"src="logoHC.jpeg" alt="logo">
            <a class="navbar-brand" href="#">Health Center Connect</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item"><a class="nav-link" href="/Admin_avamedi"><i class="fa-solid fa-capsules"></i>Available Medicines</a></li>
                    <li class="nav-item"><a class="nav-link" href="/Admin_bloodDonors"><i class="fa-solid fa-droplet"></i>Blood Donors List</a></li>
                    <li class="nav-item"><a class="nav-link" href="#"><i class="fa-solid fa-video"></i>Virtual Conference</a></li>
                    <li class="nav-item"><a class="nav-link" href="#"><i class="fa-solid fa-table-cells-row-unlock"></i>Slot Booking</a></li>
                    <li class="nav-item"><a class="nav-link" href="#"><i id="profile" class="fa-solid fa-user"></i></a></li>
                    <li class="nav-item"><a class="nav-link" href="/">Logout</a></li>
                </ul>
            </div>
        </div>
    </nav>

    <header class="bg-image py-5">
        <div class="container h-100">
            <div class="row h-100 align-items-center">
                <div class="col-lg-12">
                    <h1 class="display-4 text-white mt-5 mb-2">Welcome to Health Connect</h1>
                    <p class="lead mb-5 text-white-50">Connecting college students with health resources</p>
                </div>
            </div>
        </div>
    </header>

    <main class="container my-5">
        <div class="row">
            <div class="col-md-4 mb-4">
                <div class="card user-info h-100">
                    <div class="card-body">
                        <h5 class="card-title">Admin Information</h5>
                        <p class="card-text">Name: <%= person.first_name %> <%= person.last_name %></p>
                        <p class="card-text">Age: <%= person.age %></p>
                        <p class="login_time">Login-Time: <span id="loginTime"></span></p>
                     </div>
                </div>
            </div>
        </div>
        <div class="row mt-4">
            <div class="col-12">
                <div class="card medical-alerts">
                    <div class="card-body">
                        <h5 class="card-title">Medical Alerts</h5>
                        
                        <div id="alertContainer">
                            <div class="alert alert-info" role="alert">
                                <% if (alertss && alertss.length > 0) { %>
                                    <% alertss.forEach(function(a) { %>
                                        <div class="d-flex justify-content-between align-items-center">
                                            <span><%= a.alerti %></span>
                                            <button class="btn btn-danger btn-sm" onclick="deleteAlert('<%= a._id %>')">Delete</button>
                                        </div>
                                    <% }) %>
                                <% } else { %>
                                    <p>No alerts found.</p>
                                <% } %>
                            </div>
                        </div>
                
                        <button id="editBtn" class="btn btn-primary mt-3" onclick="toggleEdit()">Edit Alerts</button>
                        
                        <div id="alertForm" style="display:none;">
                            <input type="text" id="newAlert" class="form-control mb-2" placeholder="Enter new alert">
                            <button class="btn btn-success" onclick="addAlert()">Add Alert</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>
    
    <%-include('slide')%>;
    <br />
    <p id="whychooseus">Why Choose Us</p>
    <img src="whyus.png" alt="whychooseus" id="whyus" />

    <%-include('footer')%>

    <br>

    <script>

        document.addEventListener("DOMContentLoaded", function() {
            const loginTime = new Date(); // Get the current date and time
            document.getElementById("loginTime").textContent = loginTime.toLocaleString(); // Display in readable format
        });


        function toggleEdit() {
        const form = document.getElementById('alertForm');
        form.style.display = form.style.display === 'none' ? 'block' : 'none';
    }

    // Function to add a new alert
// Function to add a new alert
// Function to add a new alert
function addAlert() {
    const newAlertText = document.getElementById('newAlert').value.trim();
    
    console.log('New Alert Text:', newAlertText); // Debugging: check if the value is captured

    if (newAlertText !== "") {
        fetch('/addAlert', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json',
            },
            body: JSON.stringify({ alerti: newAlertText })
        })
        .then(response => {
            if (!response.ok) {
                return response.text().then(errMsg => { throw new Error(errMsg) });
            }
            return response.text();
        })
        .then(data => {
            console.log(data);  // Success message from backend

            // Add new alert to the DOM
            const alertContainer = document.getElementById('alertContainer');
            const newAlert = document.createElement('div');
            newAlert.className = 'alert alert-info';
            newAlert.role = 'alert';
            newAlert.innerHTML = `
                ${newAlertText}
                <button class="btn btn-danger btn-sm float-end" onclick="deleteAlert('${newAlertText}', this)">Delete</button>
            `;
            alertContainer.appendChild(newAlert);
            document.getElementById('newAlert').value = ''; // Clear the input field
        })
        .catch(error => {
            console.error('Error adding alert:', error);
            alert("Failed to add alert: " + error.message);  // Display error in a pop-up alert
        });
    } else {
        alert('Alert text cannot be empty');  // Show error if the input is empty
    }
}




// Function to delete an alert
function deleteAlert(alertId, button) {
    // Send request to the backend to delete alert
    fetch(`/deleteAlert/${alertId}`, {
        method: 'DELETE'
    })

    .then(response => response.text())
    .then(data => {
        console.log(data);  // Success message from backend
        button.parentElement.remove();  // Remove alert from DOM
    })
    .catch(error => console.error('Error deleting alert:', error));
}
    </script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>